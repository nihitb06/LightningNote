<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Dark Application Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
    </style>
    <!-- Base Application Theme in Red -->
    <style name="AppTheme.Red" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedPrimary</item>
        <item name="colorPrimaryDark">@color/colorRedPrimaryDark</item>
        <item name="colorAccent">@color/colorRedAccent</item>
    </style>
    <!-- Base Application Theme in Teal -->
    <style name="AppTheme.Teal" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTealPrimary</item>
        <item name="colorPrimaryDark">@color/colorTealPrimaryDark</item>
        <item name="colorAccent">@color/colorTealAccent</item>
    </style>
    <!-- Base Application Theme in Green -->
    <style name="AppTheme.Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreenPrimaryDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
    </style>
    <!-- Base Application Theme in Blue -->
    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBluePrimary</item>
        <item name="colorPrimaryDark">@color/colorBluePrimaryDark</item>
        <item name="colorAccent">@color/colorBlueAccent</item>
    </style>
    <!-- Base Application Theme in Purple -->
    <style name="AppTheme.Purple" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurplePrimary</item>
        <item name="colorPrimaryDark">@color/colorPurplePrimaryDark</item>
        <item name="colorAccent">@color/colorPurpleAccent</item>
    </style>

    <!-- Regular Application theme without System Action Bar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Dark Application Theme without System Action Bar -->
    <style name="AppTheme.Dark.NoActionBar" parent="AppTheme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Red Application Theme without System Action Bar -->
    <style name="AppTheme.Red.NoActionBar" parent="AppTheme.Red">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Teal Application Theme without System Action Bar -->
    <style name="AppTheme.Teal.NoActionBar" parent="AppTheme.Teal">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Green Application Theme without System Action Bar -->
    <style name="AppTheme.Green.NoActionBar" parent="AppTheme.Green">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Blue Application Theme without System Action Bar -->
    <style name="AppTheme.Blue.NoActionBar" parent="AppTheme.Blue">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Purple Application Theme without System Action Bar -->
    <style name="AppTheme.Purple.NoActionBar" parent="AppTheme.Purple">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- SplashScreen Theme -->
    <style name="AppTheme.SplashLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- FullScreen Theme -->
    <style name="AppTheme.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Theme for Attachment Details -->
    <style name="AppTheme.Black" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/dividerColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- AppBarOverlay Theme for AppbarLayout -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- PopupOverlay Theme for Toolbar -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for Clickable Views -->
    <style name="AppTheme.ClickableView" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.ClickableViewBorderless" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Colored Button -->
    <style name="AppTheme.ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.FlatButton" parent="Widget.AppCompat.Button.Borderless.Colored" />

</resources>
